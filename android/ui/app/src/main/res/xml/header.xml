<preference-headers
    xmlns:android="http://schemas.android.com/apk/res/android">

    <header android:fragment="com.tolka.ui_test.SettingActivity$PrefFragment"
            android:icon="@android:drawable/ic_menu_search"
            android:title="Prefs 1"
            android:summary="An example of some preferences." />

    <header android:fragment="com.tolka.ui_test.SettingActivity$Pref2Fragment"
            android:icon="@android:drawable/ic_dialog_alert"
            android:title="Prefs 2"
            android:summary="Some other preferences you can see.">
        <extra android:name="someKey" android:value="someHeaderValue" />
    </header>

    <header android:icon="@android:drawable/ic_delete"
            android:title="Intent"
            android:summary="Launches an Intent.">
        <intent android:action="android.intent.action.VIEW"
                android:data="http://www.android.com" />
    </header>

</preference-headers>